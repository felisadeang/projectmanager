<style>
#newuser {
  background-image:url('/assets/big_green_img.png');
  background-repeat:no-repeat;
  background-size:cover;
  background-position:center;
  height: 100vh;
  text-align: center;
}
h2 {
  letter-spacing: 1px;
}
.imglogo {
  padding-top: 5%;
}
#holder {
  margin-top: 10%;
  background-color: white;
  padding: 10px 20px 10px 20px;
  /*border-radius: 5px;*/
}
</style>
<div id="newuser">
  <div class="container">
  <div class="row">
    <div class="col-xs-5 col-md-4"></div>
    <div class="col-xs-8 col-md-4">
      <p class="imglogo"><%= image_tag "cahoots_logo_secondary.png" %></p>
      <% if flash[:errors] %>
      <div class="alert alert-danger" role="alert"> <span class="glyphicon glyphicon-exclamation-sign" aria-hidden="true"></span> <% flash[:errors].each do |message| %> <%= message %>. <% end %></div>
      <% end %>
    <div id="holder">
      <h2><small>Register</small></h2>
      <form action="/users" method="post" class="form-horizontal">
        <input type='hidden' name='authenticity_token' value='<%= form_authenticity_token %>'>
        <div class="form-group">
        <div class="col-sm-12">
        <input type="text" name="first_name" class="form-control" placeholder="First Name">
        </div>
        </div>
        <div class="form-group">
        <div class="col-sm-12">
        <input type="text" name="last_name" class="form-control" placeholder="Last Name">
        </div>
        </div>
        <div class="form-group">
        <div class="col-sm-12">
        <input type="text" name="email" class="form-control" placeholder="Email">
        </div>
        </div>
        <div class="form-group">
        <div class="col-sm-12">
        <input type="password" name="password" class="form-control" placeholder="Password">
        </div>
        </div>
        <div class="form-group">
        <div class="col-sm-12">
        <input type="password" name="password_confirmation" class="form-control" placeholder="Password Confirmation">
        </div>
        </div>
        <div class="form-group">
        <div class="col-sm-12">
        <select name='department' class="form-control">
					<option selected='select' disabled='disabled'>Select Your Department</option>
					<% if @departments %>
					  <% @departments.each do |department| %>
					    <option value='<%= department.id %>'><%= department.name %></option>
					  <% end %>
					<% end %>
				</select>
        </div>
        </div>
        <div class="form-group">
        <div class="col-sm-12">
        <input class="btn btn-secondary btn-lg btn-block" type="submit" value="Join">
        </div>
        </div>
      </form>
      <p>Already a member? <a href="/login">Login here.</a></p>
    </div>
  </div>
  <div class="col-xs-5 col-md-4"></div>
  </div>
</div>
</div>
