

<div class="container-fluid">
    <div class="row">
    <div class="col-xs-4"></div>
    <div class="col-xs-5">
        <% if flash[:errors] %>
          <% flash[:errors].each do |e| %>
            <p><%= e %></p>
          <% end %>
        <% end %>
        <form action='/projects' method='post'>
          <input name="authenticity_token" value="<%= form_authenticity_token %>" type="hidden">
          <input type="hidden" name="project[user_id]" value="<%= @user.id =%>">
          <input type="hidden" name="project[department_id]" value="<%= @user.department.id =%>">
          <div class="form-group">
          <label class="col-sm-3 control-label">Name</label>
          <div class="col-sm-9">
          <input type="text" name="project[name]" class="form-control">
          </div>
          </div>
          <div class="form-group">
          <label class="col-sm-3 control-label">Description</label>
          <div class="col-sm-9">
          <input type="text" name="project[description]" class="form-control">
          </div>
          </div>
          <div class="form-group">
          <label class="col-sm-3 control-label">Deadline</label>
          <div class="col-sm-9">
          <input type="date" name="project[deadline]" class="form-control">
          </div>
          </div>
          <input class="btn btn-default" type="submit" name="Submit">
        </form>
    </div>
    </div>
    <div class="col-xs-4"></div>
</div>
</div>
